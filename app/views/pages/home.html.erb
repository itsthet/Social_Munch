<div class="banner">

  <div class="banner-buttons">

    <%#= link_to "Dashboard", dashboard_path, class: "button" %>
    <%#= link_to "Challenges", challenges_path, class: "button" %>
    <%#= link_to "Log In", login_path, class: "button" %>
  </div>
</div>




<div class="search-bar" data-controller="typedjs">
    <div class="h2"> Enter Your Ingredients and See the Magic

    </div>



    <div class="search-container">

      <div class="search-box">
        <%= form_tag(recipes_path, method: :get) do %>
          <%= text_field_tag :ingredients, nil, data: {typedjs_target: "input"}%>
          <%= submit_tag "Search", class: "search-button" %>
        <% end %>

      </div>
      </div>

      <div class="all-recipes">
        <%= link_to 'All Recipes', recipes_path, class: 'button' %>
      </div>

      <div class="logo">
          <%= image_tag "logo1.jpg"%>
      </div>


  </div>

<div class="popular-recipe-batch">
  <h2>Popular Recipes of the Week</h2>

  <div class="w-100 d-flex justify-content-center">
    <% @popular_recipes.each do |popular_recipe| %>
      <div class="popular-recipe d-flex flex-column align-items-center">
        <% if popular_recipe.photo.attached? %>
          <div class="home-image text-center">
            <%= link_to recipe_path(popular_recipe) do %>
              <%= cl_image_tag(popular_recipe.photo.key, class: "home-image") %>
            <% end %>
          </div>
        <% else %>
          <div class="recipe-image text-center">
            <%= link_to recipe_path(popular_recipe) do %>
              <%= image_tag 'gnocchi.jpeg', class: "recipe-image" %>
            <% end %>
          </div>
        <% end %>
        <div class="popular-recipe-info">
          <div>
            <h2><%= link_to popular_recipe.name, recipe_path(popular_recipe), class: "recipe-name" %></h2>
            <p>Dietary Requirements: <%= popular_recipe.dietary_requirements %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



