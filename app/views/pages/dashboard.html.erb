<div class="container">
  <h1>Welcome to Your Dashboard</h1>
  <h2>Favourite Recipes</h2>
  <ul>
    <% current_user.favourites.each do |favourite| %>
      <div class="card-product">
        <% if favourite.recipe.photo.attached? %>
          <%= cl_image_tag(favourite.recipe.photo.key, class: "recipe_images") %>
        <% else %>
          <%= image_tag 'gnocchi.jpeg', class: "recipe-image" %>
        <% end %>
        <div class="card-product-infos">
          <h2><%= favourite.recipe.name %></h2>
          <p><%= favourite.recipe.description %></p>
        </div>
      </div>
    <% end %>
  </ul>
</div>
