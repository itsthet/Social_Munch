<div class="message" id="message-<%= message.id %>">
  <small class="message-meta">
    <strong class="message-user"><%= message.user.nickname %></strong>
    <i class="message-time"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
  </small>
  <p class="message-content"><%= message.content %></p>
</div>
