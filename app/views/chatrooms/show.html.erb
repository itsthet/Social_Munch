<div class="container chatroom">
  <h1 class="chatroom-name"><%= @chatroom.name %></h1>

  <div class="messages">
    <% @chatroom.messages.each do |message| %>
      <div class="message <%= message.user == current_user ? 'sent' : 'received' %>" id="message-<%= message.id %>">
        <small class="message-meta">
          <strong class="message-user"><%= message.user.nickname %></strong>
          <i class="message-time"><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
        </small>
        <p class="message-content"><%= message.content %></p>
      </div>
    <% end %>
  </div>



  <%= simple_form_for [@chatroom, @message], html: { class: "message-form" } do |f| %>
    <%= f.input :content, label: false, placeholder: "Message ##{@chatroom.name}", input_html: { class: "message-input" } %>
    <%= f.submit "Send", class: "message-submit" %>
  <% end %>
</div>
